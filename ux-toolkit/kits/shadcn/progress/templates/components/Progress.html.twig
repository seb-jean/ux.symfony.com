{# @prop value integer The progress percentage (0-100). Defaults to `0` #}
{%- props value = 0 -%}
<div
    data-slot="progress"
    class="{{ ('bg-primary/20 relative h-2 w-full overflow-hidden rounded-full ' ~ attributes.render('class'))|tailwind_merge }}"
    role="progressbar"
    aria-valuemin="0"
    aria-valuemax="100"
    aria-valuenow="{{ value }}"
    {{ attributes }}
>
    <div data-slot="progress-indicator" class="bg-primary h-full w-full flex-1 transition-all" style="transform: translateX(-{{ 100 - value }}%)"></div>
</div>
