<twig:Dialog id="delete_account">
    <twig:Dialog:Trigger>
        <twig:Button variant="outline" {{ ...trigger_attrs }}>Open Dialog</twig:Button>
    </twig:Dialog:Trigger>
    <twig:Dialog:Content class="sm:max-w-sm">
        <twig:Dialog:Header>
            <twig:Dialog:Title>Edit profile</twig:Dialog:Title>
            <twig:Dialog:Description>
                Make changes to your profile here. Click save when you&apos;re
                done.
            </twig:Dialog:Description>
        </twig:Dialog:Header>
        <twig:Field:Group>
            <twig:Field>
                <twig:Field:Label for="name-1">Name</twig:Field:Label>
                <twig:Input id="name-1" name="name" value="Pedro Duarte" />
            </twig:Field>
            <twig:Field>
                <twig:Field:Label for="username-1">Username</twig:Field:Label>
                <twig:Input id="username-1" name="username" value="@peduarte" />
            </twig:Field>
        </twig:Field:Group>
        <twig:Dialog:Footer>
            <twig:Dialog:Close>
                <twig:Button variant="outline" {{ ...close_attrs }}>Cancel</twig:Button>
            </twig:Dialog:Close>
            <twig:Button type="submit">Save changes</twig:Button>
        </twig:Dialog:Footer>
    </twig:Dialog:Content>
</twig:Dialog>
