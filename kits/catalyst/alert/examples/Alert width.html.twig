<twig:Button command="show-modal" commandfor="alert-refund-payment">
    Refund payment
</twig:Button>
<twig:Alert id="alert-refund-payment" size="lg">
    <twig:Alert:Title>Are you sure you want to refund this payment?</twig:Alert:Title>
    <twig:Alert:Description>
        The refund will be reflected in the customer's bank account 2 to 3 business days after processing.
    </twig:Alert:Description>
    <twig:Alert:Actions>
        <twig:Button plain command="close" commandfor="alert-refund-payment">
            Cancel
        </twig:Button>
        <twig:Button command="close" commandfor="alert-refund-payment">Refund</twig:Button>
    </twig:Alert:Actions>
</twig:Alert>
